generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  PROFESOR
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  fullName     String
  role         Role
  reservations Reservation[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  OCCUPIED
  COMPLETED
  CANCELLED
}

enum ReservationType {
  CLASS
  EVENT
}

model Lab {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  capacity    Int
  description String?
  software    String[]      @default([])
  softwareList Software[]
  isPermanent Boolean       @default(false)
  reservations Reservation[]
}

model Reservation {
  id          Int               @id @default(autoincrement())
  startTime   DateTime
  endTime     DateTime
  subject     String
  description String?
  type        ReservationType   @default(CLASS)
  status      ReservationStatus @default(CONFIRMED)
  checkInTime DateTime?
  checkOutTime DateTime?
  
  userId      Int
  user        User              @relation(fields: [userId], references: [id])
  labId       Int
  lab         Lab               @relation(fields: [labId], references: [id])
  
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  schoolId    String?
  school      School?           @relation(fields: [schoolId], references: [id])
}

model School {
  id        String        @id
  name      String
  colorHex  String
  reservations Reservation[]
  teachers  Teacher[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model Software {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  version   String?
  license   String?
  labs      Lab[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Teacher {
  id        Int      @id @default(autoincrement())
  name      String
  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
